RewriteEngine On

# Redirect to HTTPS (optional, uncomment if using SSL)
# RewriteCond %{HTTPS} off
# RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Pretty URLs for articles
RewriteRule ^article/([a-z0-9-]+)$ article.php?slug=$1 [L,QSA]

# Prevent direct access to includes and database directories
RewriteRule ^(includes|database)/ - [F,L]